# Variables de entorno para el bot de trading
# Copia este archivo a .env y rellena los valores según tu exchange.
# Nunca subas tu .env a repositorios públicos.

# Exchange y credenciales (usa paper trading primero)
EXCHANGE_ID=binance
API_KEY=
API_SECRET=
API_PASSPHRASE=

# Mercado y timeframe
SYMBOL=BTC/USDT
TIMEFRAME=1h

# Base de datos (sqlite local por defecto)
DB_URL=sqlite:///data/market.db

# Modo y gestión de riesgo
PAPER_TRADING=true
RISK_MAX_POSITION_SIZE=0.1
RISK_STOP_LOSS_PCT=0.02
RISK_TAKE_PROFIT_PCT=0.04

# Logging
LOG_LEVEL=INFO

# IA (configuración básica)
AI_USE=true
AI_PROBA_BUY=0.55
AI_PROBA_SELL=0.45

# Notificaciones (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=

# Observabilidad (opcional)
SENTRY_DSN=

# Riesgo avanzado
RISK_TRAILING_STOP_PCT=0.02
RISK_MAX_DAILY_LOSS_PCT=0.05
RISK_MAX_CONSECUTIVE_LOSSES=3
RISK_KILL_SWITCH_DRAWDOWN_PCT=0.10
